@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="alert alert-info show" id="connection-status">

</div>

<div class="blog-list card-columns" id="blog-list"></div>
<script id="blog-card" type="text/template">
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">
				{{PostId}} -
				{{Title}}
			</h5>
			<p class="cardtext">{{ShortDescription}}</p>
			<button onclick="pageEvents.loadBlogPost('{{Link}}');" class="btn btn-primary">ir</button>
		</div>
	</div>
</script>

<div id="blog-item-container"></div>
<script id="blog-item" type="text/template">
	<div id="{{Link}}" class="blog-item">
		{{Content}}
	</div>
	<a href="#blog-title" class="btn btn-primary blog-item-close">voltar</a>
	<br />
	<br />

</script>


<div class="center">
	<button class="btn btn-primary"
			onclick="pageEvents.loadMoreBlogPosts();">ver mais
	</button>
	<br /><br />
</div>